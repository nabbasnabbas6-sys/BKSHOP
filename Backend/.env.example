# Backend environment example for deployment (do NOT commit secrets)
# Copy this to .env locally or set variables in your hosting provider (Railpack)

# Server
PORT=5000
NODE_ENV=production

# Firebase (if used)
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
# For multiline private keys, either set as a single-line with \n, or use your provider's multiline secret feature
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"

# Database
DATABASE_URL=

# Auth / tokens
JWT_SECRET=

# Other
LOG_LEVEL=info
